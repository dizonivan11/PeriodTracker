<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".setup.SkinFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How's your skin condition?"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_skin_no_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No changes" />

                <CheckBox
                    android:id="@+id/check_skin_acne_blemishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acne and blemishes" />

                <CheckBox
                    android:id="@+id/check_skin_dark_spots_pores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark spots and pores" />

                <CheckBox
                    android:id="@+id/check_skin_dryness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dryness" />

                <CheckBox
                    android:id="@+id/check_skin_fine_lines_wrinkles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine lines and wrinkles" />

                <CheckBox
                    android:id="@+id/check_skin_dullness_texture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dullness and texture" />

                <CheckBox
                    android:id="@+id/check_skin_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/back_skin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_back" />

                <Button
                    android:id="@+id/submit_skin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/button_finish" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>