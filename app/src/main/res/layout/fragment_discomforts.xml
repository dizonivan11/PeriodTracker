<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".setup.DiscomfortsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any discomforts you are feeling these past few days?"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/radio_discomforts_painful_menstrual_cramps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Painful menstrual cramps" />

                <CheckBox
                    android:id="@+id/radio_discomforts_pms_symptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PMS symptoms" />

                <CheckBox
                    android:id="@+id/radio_discomforts_unusual_discharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unusual discharge" />

                <CheckBox
                    android:id="@+id/radio_discomforts_heavy_menstrual_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heavy menstrual flow" />

                <CheckBox
                    android:id="@+id/radio_discomforts_mood_swings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood swings" />

                <CheckBox
                    android:id="@+id/radio_discomforts_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other" />

                <CheckBox
                    android:id="@+id/radio_discomforts_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No, nothing bothers me" />

            </LinearLayout>

            <Button
                android:id="@+id/submit_discomforts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_next"
                android:layout_marginTop="40dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>