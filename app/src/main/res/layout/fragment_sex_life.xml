<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".setup.SexLifeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any changes on your sex life?"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_sex_life_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not sexually active" />

                <CheckBox
                    android:id="@+id/check_sex_life_painful_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Painful sex" />

                <CheckBox
                    android:id="@+id/check_sex_life_difficulty_orgasm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty with orgasm" />

                <CheckBox
                    android:id="@+id/check_sex_life_low_libido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low libido" />

                <CheckBox
                    android:id="@+id/check_sex_life_communication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication" />

                <CheckBox
                    android:id="@+id/check_sex_life_poor_body_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Poor body image" />

                <CheckBox
                    android:id="@+id/check_sex_life_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other" />

            </LinearLayout>

            <Button
                android:id="@+id/submit_sex_life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_next"
                android:layout_marginTop="40dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>